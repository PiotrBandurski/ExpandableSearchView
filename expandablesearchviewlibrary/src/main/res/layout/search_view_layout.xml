<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_airport_linearLayout">

    <RelativeLayout
        android:id="@+id/suggestedAirportContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/spinner_drawable"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/airport_search_item_layout_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="8dp"
            android:src="@drawable/search_icon"
            android:paddingBottom="8dp"
            />

        <EditText
            android:id="@+id/search_editText"
            android:layout_width="match_parent"
            android:inputType="textNoSuggestions"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:clickable="true"
            android:background="@android:color/transparent"
            tools:text="dddddddddddd"
            android:imeOptions="flagNoExtractUi"
            android:layout_toRightOf="@+id/airport_search_item_layout_iv"
            android:layout_toEndOf="@+id/airport_search_item_layout_iv"/>

    </RelativeLayout>

</LinearLayout>